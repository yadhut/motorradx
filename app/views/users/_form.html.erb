


<div class="container">
    <div class="row justify-content-center">
    <%= render 'shared/errors', obj: @user%>
    <%= form_with(model: @user,class:"card shadow p-3 mb-5 bg-info rounded", local: true ) do |f| %>
        <div class="form-group">
            <label class="form-control-label">USERNAME</label>
            <%= f.text_field :username, class: "form-control" %>
        </div>
        <div class="form-group">
            <label class="form-control-label">EMAIL</label>
            <%= f.text_field :email, class: "form-control" %>
        </div>
        <div class="form-group">
            <label class="form-control-label">PASSWORD</label>
            <%= f.text_field :password, class: "form-control",type:"password"%>
        </div>

        <div class="col-lg-12 loginbttm">
            <div class="col-lg-6 login-btm login-text">
            </div>
            <div class="col-lg-6 login-btm login-button">
                <%= f.submit(@user.new_record? ? "Sign Up" : "Update Account", class:"btn btn-outline-primary") %>
            </div>
        </div>
    <% end %>
</div>




