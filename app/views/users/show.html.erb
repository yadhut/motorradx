<h1 class="text-center mt-4"><%= @user.username%>'s profile</h1> 

<%= gravatar_for @user%>
<div class="text-center mt-4">
    <% if( logged_in? && current_user.username ==@user.username) %>
        
        <%= link_to "Edit Profile", edit_user_path(@user), class: "btn btn-primary "%>
        <%= link_to "Log out", login_path, method: :delete, class: "btn btn-primary "%>
        <%= link_to "New Article", new_article_path, class: "btn btn-primary "%>
        <%= link_to "Delete profile", user_path(current_user),method: :delete, data: {confirm:"Are you sure?"} ,class: "btn btn-danger" %>
    <%end%>
    <%= link_to "Back", users_path, class: "btn btn-primary "%>
</div>

<h3 class="text-center mt-4">Articles</h3> 

<%= render 'articles/articles'%>