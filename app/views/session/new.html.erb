<h1 class="text-center mt-4">Log in</h1> 

<div class="container">
    <div class="row justify-content-center">
    <%= form_with(scope: :session, url: login_path, class:"card shadow p-3 mb-5 bg-info rounded", local: true ) do |f| %>
        <div class="form-group">
            <label class="form-control-label">EMAIL</label>
            <%= f.text_field :email, class: "form-control" %>
        </div>
        <div class="form-group">
            <label class="form-control-label">PASSWORD</label>
            <%= f.text_field :password, class: "form-control",type:"password"%>
        </div>

        <div class="col-lg-12 loginbttm">
            <div class="col-lg-6 login-btm login-text">
            </div>
            <div class="col-lg login-btm login-button">
                <%= f.submit "Log in", class:"btn btn-outline-primary" %>
            </div>
        </div>
    <% end %>
    <div class="col-lg-1 login-btm login-button">
    <%=link_to "Back", users_path, class:"btn btn-outline-primary" %>
    </div>

</di>
